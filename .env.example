# Application
NODE_ENV=development
PORT=4000
# Comma-separated list of allowed frontend URLs
FRONTEND_URL=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rt_cx

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Hugging Face NLP Integration (REQUIRED)
# Get your API token from: https://huggingface.co/settings/tokens
# Free tier: 1,000 requests/day | Pro tier ($9/mo): 30,000 requests/month
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# NLP Configuration (Optional - defaults provided in config/nlp.ts)
# SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english
# EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base
# SENTIMENT_BATCH_SIZE=10
# SENTIMENT_RETRY_ATTEMPTS=3

# Email (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
ALERT_EMAIL_FROM=alerts@rt-cx.com

# File Storage (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=rt-cx-uploads

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
